<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:n="clr-namespace:NisanWPF.BusinessLogic;assembly=NisanWPF.BusinessLogic">
    <DataTemplate DataType="{x:Type n:nisanOrder}">
        <DockPanel LastChildFill="True">
            <WrapPanel DockPanel.Dock="Left">
                <Button Content="{Binding abbrev}" Background="{Binding soldtoColor}" Style="{StaticResource SoldtoButtonStyle}" />
            </WrapPanel>
            <StackPanel>
                <TextBlock Text="{Binding name}"/>
            </StackPanel>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>